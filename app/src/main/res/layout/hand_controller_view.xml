<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/bt_hit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Hit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toStartOf="@+id/bt_stand"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_stand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stand"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/bt_hit"
        tools:layout_editor_absoluteX="148dp" />

    <Button
        android:id="@+id/bt_double"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="20dp"
        android:text="Double"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="@+id/bt_hit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/bt_stand" />

    <com.ooad.a21point.ActivitiesAndViews.CardListView
        android:id="@+id/card_list_view"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bt_hit"
        tools:layout_editor_absoluteX="8dp">

    </com.ooad.a21point.ActivitiesAndViews.CardListView>

    <TextView
        android:id="@+id/tv_result"
        android:layout_width="144dp"
        android:layout_height="41dp"
        android:text="WinOrLose"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="90dp" />

</android.support.constraint.ConstraintLayout>